<?xml version="1.0"?>
<robot name="worktable">

  <!-- 工作台本体 -->
  <link name="worktable_link">
    <visual>
      <!-- 调整位置与姿态 -->
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <!-- STL 文件路径 -->
        <mesh filename="https://raw.githubusercontent.com/Mediter14/duco_urdf_demo/main/worktable.STL"/>
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="https://raw.githubusercontent.com/Mediter14/duco_urdf_demo/main/worktable.STL"/>
      </geometry>
    </collision>
    <inertial>
      <!-- 工作台质量较大可简化为固定刚体 -->
      <mass value="100.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

</robot>
